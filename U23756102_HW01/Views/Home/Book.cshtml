@model U23756102_HW01.Models.Booking

@{
    ViewBag.Title = "Book";
}
<div class="container my-5 text-white">
    <h2 class="text-center mb-4">Pick a Ride</h2>

    <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto">
            @using (Html.BeginForm("CreateBooking", "Home", FormMethod.Post, new { id = "bookingForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="card shadow-sm bg-white text-dark">
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row g-4">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.FullName, "Full Name *", new { @class = "form-label" })
                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.PhoneNumber, "Phone Number *", new { @class = "form-label" })
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row g-4 mt-1">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.PickupTime, "Pickup Time *", new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.PickupTime, new { @class = "form-control", type = "time", required = "required" })
                                @Html.ValidationMessageFor(model => model.PickupTime, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.BookingDate, "Booking Date & Time *", new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.BookingDate, new { @class = "form-control", type = "datetime-local", required = "required" })
                                @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12">
                                @Html.LabelFor(model => model.PickupAddress, "Pickup Address *", new { @class = "form-label" })
                                @Html.TextAreaFor(model => model.PickupAddress, new { @class = "form-control", rows = 3, required = "required" })
                                @Html.ValidationMessageFor(model => model.PickupAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row g-4 mt-1">
                            <div class="col-md-6">
                                <label for="ReasonID" class="form-label">Reason *</label>
                                <select id="ReasonID" name="ReasonID" class="form-select" required>
                                    <option disabled selected value="">-- Select a reason --</option>
                                    @foreach (var reason in ViewBag.reasons)
                                    {
                                        <option value="@reason.ReasonID">@reason.Description</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="DriverID" class="form-label">Select Driver *</label>
                                <select id="DriverID" name="DriverID" class="form-select" required>
                                    <option disabled selected value="">-- Select a driver --</option>
                                    @foreach (var driver in ViewBag.drivers)
                                    {
                                        <option value="@driver.DriverID">@driver.FirstName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="VehicleID" class="form-label">Select Vehicle *</label>
                                <select id="VehicleID" name="VehicleID" class="form-select" required>
                                    <option disabled selected value="">-- Select a vehicle --</option>
                                    @foreach (var vehicle in ViewBag.Vehicles)
                                    {
                                        <option value="@vehicle.VehicleID">@vehicle.Type</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <input type="hidden" id="isSOS" name="isSOS" value="true" />
                        <input type="hidden" id="ServiceID" name="ServiceID" value="@ViewBag.ServiceID" />

                        <div class="mt-5 text-end">
                            <button type="submit" class="btn btn-success px-4">Create Booking</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

