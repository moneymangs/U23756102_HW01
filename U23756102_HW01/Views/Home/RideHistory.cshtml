@model IEnumerable<U23756102_HW01.Models.BookingConfirmedViewModel>

@{
    ViewBag.Title = "Ride History";
}

<div class="container my-5 bg-dark text-light rounded-4 p-4 shadow-lg">

    <div class="text-center mb-4">
     <h1>⏳</h1>
        <h2 class="fw-bold">Ride History</h2>
    </div>

    <div class="row row-cols-1 g-4">
        @foreach (var item in Model)
        {
            var isSOS = item.Booking.isSOS;

            <div class="col">
                <a href="@Url.Action("BookingConfirmed2", "Home", new { BookingID = item.Booking.BookingID })"
                   class="text-decoration-none"
                   style="display: block;">
                    <div class="card  shadow-sm p-3 rounded-4 bg-white text-dark
                                @(isSOS ? "border-danger border-3" : "")"
                         style="transition: filter 0.3s ease;">
                        <div class="card-body">
                            <h4 class="card-title text-dark mb-3 @(isSOS ? "text-danger" : "text-light")">
                                @item.Booking.BookingDate.ToString("f")
                            </h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Booking ID:</strong> <span class="text-dark">@item.Booking.BookingID</span></p>
                                    <p><strong>Driver Name:</strong> <span class="text-dark">@item.Driver.FirstName</span></p>
                                    <p><strong>Ambulance Type:</strong> <span class="text-dark">@item.Vehicle.Type</span></p>
                                    <p><strong>Pick-Up Address:</strong> <span class="text-dark">@item.Booking.PickupAddress</span></p>
                                </div>
                                <div class="col-md-6 d-flex align-items-center justify-content-center">
                                    @if (isSOS)
                                    {
                                        <span class="badge bg-danger fs-6 px-4 py-2 rounded-pill">SOS Booking</span>
                                    }
else { 
                                <span class="badge bg-primary fs-6 px-4 py-2 rounded-pill">Normal Booking</span>}
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Optional: subtle card hover effect
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', () => card.style.filter = 'brightness(1.1)');
            card.addEventListener('mouseleave', () => card.style.filter = 'brightness(1)');
        });
    </script>
}
